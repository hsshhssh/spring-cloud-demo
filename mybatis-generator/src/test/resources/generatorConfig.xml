<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="Mysql" targetRuntime="MyBatis3Simple">

        <plugin type="com.hssh.mybatis.MyMapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
        </plugin>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/test"
                        userId="root"
                        password="">
        </jdbcConnection>

        <javaTypeResolver type="com.hssh.mybatis.MyJavaTypeResolver"></javaTypeResolver>

        <javaModelGenerator targetPackage="com.hssh.spring.cloud.persistent.entity.model" targetProject="H:\project\github\spring-cloud-demo\mybatis-generator\src\main\java"/>

        <sqlMapGenerator targetPackage="mybatis"  targetProject="H:\project\github\spring-cloud-demo\mybatis-generator\src\main\resources"/>

        <javaClientGenerator targetPackage="com.hssh.spring.cloud.persistent.dao" targetProject="H:\project\github\spring-cloud-demo\mybatis-generator\src\main\java" type="XMLMAPPER" />

        <table tableName="user" domainObjectName="User">
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>